# Heap sort, O(Nlogk) time complexity
class Solution(object):
    def findKthLargest(self, nums, k):
        """
        :type nums: List[int]
        :type k: int
        :rtype: int
        """
        heap = []
        for num in nums:
            heapq.heappush(heap, num) # default is min heap
        while len(heap) > k: # pop until there is only k elements left in the heap 
            heapq.heappop(heap) # pop the head of the heap (which is the min value of the heap)
        return heap[0] # the min of the k elemenths heap will be the kth largest element
